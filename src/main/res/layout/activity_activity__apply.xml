<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_newActiveApply_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="活动报名"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>


    <TextView
        android:gravity="bottom"
        android:text="报名信息"
        android:paddingLeft="15dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <LinearLayout
        android:background="@color/grayf2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="姓名"
            android:layout_width="85dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edt_newActiveApply_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_editext"
            android:gravity="center_vertical"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/grayf2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="手机号码"
            android:layout_width="85dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edt_newActiveApply_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_editext"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/grayf2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="预订数量"
            android:layout_width="85dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/edt_newActiveApply_number"
            android:hint="你最多预订数量为2位"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border_editext"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_newActiveApply_explain"
        android:text="预定说明"
        android:textSize="13sp"
        android:paddingLeft="15dp"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:textColor="#b8b8b8"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent" />


    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_newActiveApply_prices"
            android:gravity="center"
            android:text="总额:79￥"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:background="@color/grayf2"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/txt_newActiveApply_commit"
            android:text="提交订单"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:textColor="@color/white"
            android:background="@color/orange"
            android:layout_height="match_parent" />

    </LinearLayout>
    
</LinearLayout>
