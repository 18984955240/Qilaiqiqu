<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/write" >

    <RelativeLayout
        android:id="@+id/layout_ridingDatilsList_one"
        android:layout_width="fill_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="5dp"
        android:background="@color/write" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-25dp"
            android:layout_alignBottom="@+id/img_ridingDatilsList_one"
            android:layout_height="wrap_content">
            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:layout_centerInParent="true"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@color/white"
                />
            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:layout_centerInParent="true"
                android:id="@+id/img_ridingDetailsList_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/persional_picture"
                />


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_ridingDatilsList_one"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_ridingDetailsList_ridingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:textSize="16sp" />

</LinearLayout>