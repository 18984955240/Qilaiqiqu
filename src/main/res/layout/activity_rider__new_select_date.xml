<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.Rider_NewReleaseDate">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="时间设置"
            android:textColor="@color/write"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_monday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周一"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_tuesday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周二"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_wednesday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周三"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_thuresday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周四"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_friday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周五"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_saturday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周六"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_sunday"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/corners_rider_time_white"
            android:gravity="center"
            android:text="周日"
            android:textSize="12sp" />
    </LinearLayout>


    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </ListView>

    <Button
        android:id="@+id/btn_commit"
        android:text="保存"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/corners_rider_text_blue"
        android:layout_width="90dp"
        android:layout_height="39dp" />

</LinearLayout>
