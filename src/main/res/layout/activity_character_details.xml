<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_characterback"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="人物志"
            android:textColor="@color/write"
            android:textSize="18sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/character_web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        ></WebView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="评论一下吧"
            android:textColor="@color/gray"
            android:paddingLeft="5dp"
            android:background="@drawable/border_editext"
            android:layout_height="match_parent" />

        <TextView
            android:visibility="gone"
            android:layout_margin="3dp"
            android:id="@+id/comment"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/corners_bg_blue"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="评论"/>

    </LinearLayout>
</LinearLayout>