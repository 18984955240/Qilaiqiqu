<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="190dp">

    <ImageView
        android:id="@+id/img_character_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="190dp" />

    <LinearLayout
        android:background="@drawable/background_shade2"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/img_character_title"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="穿过风雨的骑行妹子——美瑞"
            />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:id="@+id/txt_character_photo"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/persional_picture"
                />

            <TextView
                android:id="@+id/txt_character_name"
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="独步天涯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="|"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rwz_browse"
                />
            <TextView
                android:id="@+id/txt_character_browse"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="260次浏览"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rwz_comment"
                />
            <TextView
                android:id="@+id/txt_character_recomment"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="(90)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>