<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <com.ecloud.pulltozoomview.PullToZoomListViewEx
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ffffffff"
            android:dividerHeight="3.5dp"
            custom:headerView="@layout/profile_head_view"
            custom:zoomView="@layout/list_head_zoom_view" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_shade"
        android:layout_height="44dp">

        <TextView
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="个人中心"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_personalCengter_back"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/return_innavigationbar"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp" />
    </RelativeLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_button"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_chat"
            android:text="私信"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/corners_bg_blue"
            android:layout_width="100dp"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btn_care"
            android:layout_marginLeft="40dp"
            android:text="关注一下"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/corners_bg_blue"
            android:layout_width="100dp"
            android:layout_height="30dp" />

    </LinearLayout>

</RelativeLayout>