<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center_vertical">

        <TextView
            android:text="title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:maxLength="15"
            android:singleLine="true"
            android:textSize="15sp"
            android:id="@+id/txt_managefragment_title" />

        <TextView
            android:text="浏览"
            android:id="@+id/txt_managefragment_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:maxLength="15"
            android:singleLine="true"
            android:textSize="10sp"
             />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_managefragment_photo"
            android:layout_width="fill_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#000000"
            android:scaleType="centerCrop"
            android:src="@drawable/bitmap_homepage" />

        <com.qizhi.qilaiqiqu.utils.RotateTextView
            android:visibility="gone"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/img_managefragment_photo"
            android:layout_alignTop="@+id/img_managefragment_photo"
            android:background="@drawable/yellow_tag"
            android:gravity="center_vertical"
            android:paddingBottom="12dp"
            android:paddingLeft="6dp"
            android:text="收费"
            android:textColor="#ffffffff"
            android:textSize="8sp" />


        <RelativeLayout
            android:id="@+id/layout_managefragment_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_managefragment_photo"
            android:layout_marginTop="-22dp">

            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:id="@+id/img_managefragment_userImage"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/homepage_picture" />

            <TextView
                android:visibility="invisible"
                android:text="info"
                android:id="@+id/txt_managefragment_activityInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_managefragment_userName"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="15dp"
                android:textSize="13sp"
                android:layout_alignParentRight="true" />


            <TextView
                android:id="@+id/txt_managefragment_endDate"
                android:text="2016-06-01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/baomingjiezhi"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/txt_managefragment_userName"
                android:layout_alignBottom="@+id/txt_managefragment_userName"
                />

            <ImageView
                android:visibility="gone"
                android:id="@+id/img_managefragment_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txt_managefragment_activityInfo"
                android:layout_alignTop="@+id/txt_managefragment_endDate"
                android:layout_marginRight="28dp"
                android:src="@drawable/want_unchosen"
                android:layout_alignRight="@+id/txt_managefragment_activityInfo" />


            <TextView
                android:padding="7dp"
                android:layout_marginBottom="8sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/mainActivity_title"
                android:text="立即报名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/baomingjiezhi"
                android:layout_marginLeft="20dp"
                android:id="@+id/txt_managefragment_apply" />

            <TextView
                android:visibility="gone"
                android:textColor="@color/red"
                android:text="0人想去"
                android:layout_marginRight="-13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_managefragment_want"
                android:layout_alignTop="@+id/txt_managefragment_apply"
                android:layout_alignEnd="@+id/img_managefragment_want"
                android:layout_alignRight="@+id/img_managefragment_want" />

            <TextView
                android:id="@+id/txt_managefragment_money"
                android:text="免费"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_alignBaseline="@+id/txt_managefragment_apply"
                android:layout_alignBottom="@+id/txt_managefragment_apply"
                />

            <TextView
                android:text="一二三四污留"
                android:maxLength="5"
                android:id="@+id/txt_managefragment_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/img_managefragment_userImage"
                android:layout_toRightOf="@+id/img_managefragment_userImage"
                android:layout_toEndOf="@+id/img_managefragment_userImage"
                android:layout_marginStart="14dp" />

            <TextView
                android:text=" 发布"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:layout_alignBaseline="@+id/txt_managefragment_userName"
                android:layout_alignBottom="@+id/txt_managefragment_userName"
                android:layout_toRightOf="@+id/txt_managefragment_userName"
                android:layout_toEndOf="@+id/txt_managefragment_userName" />

            <TextView
                android:id="@+id/baomingjiezhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报名截止 "
                android:layout_alignBaseline="@+id/txt_managefragment_userName"
                android:layout_alignBottom="@+id/txt_managefragment_userName"
                android:layout_alignTop="@+id/txt_managefragment_activityInfo"
                android:layout_toLeftOf="@+id/txt_managefragment_endDate"
                android:layout_toStartOf="@+id/txt_managefragment_endDate" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginBottom="5dp"
        android:background="@color/grays"
        android:layout_width="match_parent"
        android:layout_height="4.5dp"/>

</LinearLayout>
