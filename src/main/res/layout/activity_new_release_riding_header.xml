<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_ReleaseRidingActivity_headerImg"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            />


        <RelativeLayout
            android:layout_marginTop="-30dp"
            android:layout_below="@+id/img_ReleaseRidingActivity_headerImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@color/white"
                />
            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:id="@+id/img_ReleaseRidingActivity_photo"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/persional_picture"
                />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_ReleaseRidingActivity_title"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="游记标题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="游记标签"
        android:textSize="16sp"
        android:textColor="#b3b3b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/id_flowlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    </com.zhy.view.flowlayout.TagFlowLayout>

    <com.amap.api.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ReleaseRidingActivity_map"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="160dp" />


</LinearLayout>