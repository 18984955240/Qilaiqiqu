<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/layout_personalCengter_myArticle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_marginTop="18dp"
                android:src="@drawable/center_article"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/txt_personalCengter_myArticle"
                android:textSize="12sp"
                android:text="我的游记"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/img_personalCengter_myArticle"
                android:background="@color/bule"
                android:layout_width="50dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_personalCengter_myActivity"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_marginTop="18dp"
                android:src="@drawable/center_activity"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/txt_personalCengter_myActivity"
                android:textSize="12sp"
                android:text="我的活动"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/img_personalCengter_myActivity"
                android:background="@color/white"
                android:layout_width="50dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_personalCengter_myRider"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_marginTop="18dp"
                android:src="@drawable/center_rider"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/txt_personalCengter_myRider"
                android:textSize="12sp"
                android:text="陪骑士"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/img_personalCengter_myRider"
                android:background="@color/white"
                android:layout_width="50dp"
                android:layout_height="2dp" />
        </LinearLayout>

        <LinearLayout

            android:id="@+id/layout_personalCengter_myCollected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_marginTop="18dp"
                android:src="@drawable/center_collected"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/txt_personalCengter_myCollected"
                android:textSize="12sp"
                android:text="我的收藏"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/img_personalCengter_myCollected"
                android:background="@color/white"
                android:layout_width="50dp"
                android:layout_height="2dp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
</LinearLayout>