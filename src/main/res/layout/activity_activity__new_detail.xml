<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed">

        <LinearLayout
            android:id="@+id/layout_NewActiveDetail_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/text_activitydetailsactivity_title"
            android:textColor="@color/write"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_NewActiveDetail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:src="@drawable/share" />

        <TextView
            android:id="@+id/txt_NewActiveDetail_revamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="编辑"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_NewActiveDetail_cllection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/img_NewActiveDetail_share"
            android:src="@drawable/cllection_unchosen" />

        <TextView
            android:id="@+id/txt_NewActiveDetail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="55dp"
            android:text="删除"
            android:textColor="#ffffffff"
            android:textSize="14sp"
            android:visibility="gone"

            />
    </RelativeLayout>

    <WebView
        android:id="@+id/NewActiveDetail_web"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </WebView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/txt_NewActiveDetail_consult"
            android:background="@color/grays"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/activity_consult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="8sp"
                android:textColor="@color/mainActivity_title"
                android:text="咨询"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/txt_NewActiveDetail_consult"-->
            <!--android:background="@color/grays"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_weight="18"-->
            <!--android:layout_height="match_parent" />-->

        <TextView
            android:id="@+id/txt_NewActiveDetail_price"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/orange"
            android:text="免费"
            android:layout_marginLeft="5dp"
            android:background="@color/grays"
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_height="match_parent" />

        <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/txt_NewActiveDetail_button"
            android:background="@color/orange"
            android:layout_width="0dp"
            android:layout_weight="42"
            android:layout_height="match_parent" />
        
    </LinearLayout>

</LinearLayout>
