<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_ridingList_ridingIamge"
        android:scaleType="centerCrop"
        android:background="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="230dp" />

    <RelativeLayout
        android:id="@+id/layout_ridingList_info"
        android:layout_below="@+id/img_ridingList_ridingIamge"
        android:layout_marginTop="-22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/img_ridingList_userImage1"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">
            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:layout_centerInParent="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/white"
                />
            <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
                android:id="@+id/img_ridingList_userImage"
                android:layout_centerInParent="true"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:border_color="@color/white"
                android:src="@drawable/homepage_picture" />
            </RelativeLayout>

        <TextView
            android:layout_marginLeft="20dp"
            android:text="ssss"
            android:textSize="15sp"
            android:id="@+id/txt_ridingList_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_ridingList_userImage1"
            android:layout_toEndOf="@+id/img_ridingList_userImage1" />

        <TextView
            android:id="@+id/txt_ridingList_ridingInfo"
            android:text="ssssssssssssssssss"
            android:layout_marginRight="15dp"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_ridingList_ridingName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/txt_ridingList_ridingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="美好周末"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txt_ridingList_userName"
            android:layout_alignStart="@+id/img_ridingList_userImage1" />

        <ImageView
            android:layout_marginBottom="10dp"
            android:id="@+id/img_ridingList_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/riding_browse"
            android:layout_below="@+id/txt_ridingList_ridingName"
            android:layout_alignStart="@+id/txt_ridingList_ridingName"
            android:layout_marginTop="10dp" />

        <TextView
            android:textColor="#b3b3b3"
            android:id="@+id/txt_ridingList_browse"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(20)"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/img_ridingList_browse"
            android:layout_toEndOf="@+id/img_ridingList_browse" />

        <ImageView
            android:id="@+id/img_ridingList_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/riding_like"
            android:layout_alignBottom="@+id/txt_ridingList_browse"
            android:layout_toStartOf="@+id/txt_ridingList_userlike" />

        <TextView
            android:id="@+id/txt_ridingList_userlike"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(20)"
            android:textColor="#b3b3b3"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:layout_alignBottom="@+id/img_ridingList_like"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/txt_ridingList_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(20)"
            android:textColor="#b3b3b3"
            android:textSize="12sp"
            android:layout_alignBottom="@+id/img_ridingList_like"
            android:layout_toStartOf="@+id/img_ridingList_like"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/riding_comment"
            android:layout_alignBottom="@+id/txt_ridingList_comment"
            android:layout_toStartOf="@+id/txt_ridingList_comment"
            android:layout_marginEnd="10dp" />
    </RelativeLayout>

    <View
        android:background="#f2f2f2"
        android:layout_below="@+id/layout_ridingList_info"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</RelativeLayout>