<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed">

        <LinearLayout
            android:id="@+id/layout_NewActiveConsult_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="返回"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="活动咨询"
            android:textColor="@color/write"
            android:textSize="18sp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/NewActiveConsult_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </ListView>

    <LinearLayout
        android:background="@color/grayf2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <EditText
            android:id="@+id/edt_NewActiveConsult_content"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:background="@drawable/border_editext"
            android:gravity="center_vertical"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_NewActiveConsult_commit"
            android:background="@drawable/corners_bg_ao"
            android:gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="咨询"
            android:layout_width="50dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
