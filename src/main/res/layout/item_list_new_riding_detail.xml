<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layout_newRidingDetail_time"
        android:background="@drawable/corner_riding_detail_time"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:src="@drawable/timemachine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_newRidingDetail_time"
            android:layout_marginLeft="10dp"
            android:textColor="@color/mainActivity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/corner_riding_detail"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/txt_newRidingDetail_content"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:id="@+id/img_newRidingDetail_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:id="@+id/layout_newRidingDetail_voice"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_newRidingDetail_voice"
                    android:textColor="@color/white"
                    android:gravity="center_vertical|right"
                    android:textSize="10sp"
                    android:paddingRight="8dp"
                    android:background="@drawable/corners_voice"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_width="90dp"
                    android:layout_height="20dp" />
                <TextView
                    android:hint=""
                    android:layout_centerVertical="true"
                    android:id="@+id/img_newRidingDetail_voice"
                    android:background="@drawable/voice_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_newRidingDetail_position"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="16dp"
                android:src="@drawable/delta_white" />
        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="-10dp"
            android:id="@+id/layout_newRidingDetail_position"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <ImageView
                android:layout_marginLeft="18dp"
                android:src="@drawable/location_seted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_newRidingDetail_position"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_newRidingDetail_legend"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</LinearLayout>