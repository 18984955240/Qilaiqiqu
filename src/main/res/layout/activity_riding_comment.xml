<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/layout_ridingComment_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/back"
                android:textColor="#ffffff"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center|right"
            android:text="@string/text_commentmessageactivity_title"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <com.qizhi.qilaiqiqu.utils.CircleImageViewUtil
            android:id="@+id/img_ridingComment_photo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/homepage_picture" />

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/text_commentmessageactivity_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_ridingComment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/list_ridingComment"
        android:divider="#00000000"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

    </ListView>


    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:background="@color/grays"
        android:layout_height="1dp"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/edt_ridingComment_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:hint=""
            />

        <Button
            android:id="@+id/btn_ridingComment_comment"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="38dp"
            android:layout_height="30dp"
            android:background="@drawable/corners_bg_blue"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="回复"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

    </LinearLayout>

</LinearLayout>
