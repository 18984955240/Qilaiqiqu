<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/start_app_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/img_advertisementActivity_startImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/start_app"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/txt_advertisementActivity_pass"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:background="@drawable/corners_start"
                android:layout_width="75dp"
                android:text="跳过广告"
                android:textColor="@color/write"
                android:layout_height="25dp" />

            <LinearLayout
                android:id="@+id/layout_advertisementActivity_showDetails"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#7fffffff"
                android:orientation="horizontal"
                >

                <TextView
                    android:gravity="right|center_vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="查看详情"
                    android:textSize="16sp"
                    android:textColor="@color/write"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_marginLeft="50dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/start_start"
                    android:layout_marginRight="20dp"
                    />

            </LinearLayout>

        </FrameLayout>



        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_logo"
                android:background="@color/write"
                />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_margin="5dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_start"
                android:textColor="@color/mainActivity_title" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/copyright"
                android:textColor="@color/mainActivity_title"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layout_advertisementActivity_webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/advertisementActivity_webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </WebView>

        <ImageView
            android:id="@+id/img_advertisementActivity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rider_return"
            />

    </RelativeLayout>


</RelativeLayout>
