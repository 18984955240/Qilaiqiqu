<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/release_article"
    android:orientation="vertical"
    android:background="#66666666"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/corners_popup_bottom"
        android:orientation="vertical" >

        <ImageView
            android:layout_marginTop="30dp"
            android:background="@drawable/article_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txt_releasePopup_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="选择游记封面"
            android:textColor="@color/mainActivity_title" />
            <!--android:background="@drawable/corners_popup_baocun_bottom"-->
    </LinearLayout>


</LinearLayout>