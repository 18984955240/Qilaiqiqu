<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.qizhi.qilaiqiqu.activity.OrderRefundApplyActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#6dbfed" >

        <LinearLayout
            android:id="@+id/refundApply_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/return_innavigationbar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/back"
                android:textColor="@color/write" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="退款申请"
            android:textColor="@color/write"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/refundApply_commit"
            android:paddingRight="20dp"
            android:layout_alignParentRight="true"
            android:text="提交"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:text="联系方式"
            android:textColor="@color/gray"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <LinearLayout
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="39dp">

            <EditText
                android:id="@+id/refundApply_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:textColor="@color/gray"
            android:paddingLeft="10dp"
            android:text="退款理由"
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <LinearLayout
            android:background="#f3f3f3"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <EditText
                android:id="@+id/refundApply_reason"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:hint="请合理填写申请理由，保持与陪骑士沟通"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            android:text="退款说明"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/refund_Explain"
            android:textColor="@color/gray"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
