<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccf5f5f5"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/white"
        android:id="@+id/view" />

    <EditText
        android:id="@+id/edt_releaseactivity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_edittext"
        android:hint="@string/edit_releaseactivity_content"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:paddingLeft="5dp"
        android:textColor="#a1a1a1"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_releaseactivity_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:src="@drawable/delta_white" />

        <LinearLayout
            android:id="@+id/layout_releaseactivity_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_releaseactivity_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_picture" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_releaseactivity_voice"
                android:textColor="@color/white"
                android:gravity="center_vertical|right"
                android:textSize="10sp"
                android:paddingRight="8dp"
                android:background="@drawable/corners_voice"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_width="90dp"
                android:layout_height="20dp" />
            <TextView
                android:hint=""
                android:layout_centerVertical="true"
                android:id="@+id/img_releaseactivity_voice"
                android:background="@drawable/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/layout_releaseactivity_cancel"
            android:visibility="gone"
            android:layout_gravity="bottom|right"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:background="@drawable/riding_delete"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>




    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_releaseactivity_location"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="#ccf5f5f5"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/location_set" />

        <TextView
            android:id="@+id/txt_releaseactivity_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/text_releaseactivity_location"
            android:textSize="14sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edt_releaseactivity_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/bg_edittext"
        android:hint="@string/edit_releaseactivity_legend"
        android:paddingLeft="10dp"
        android:inputType="textMultiLine"
        android:minLines="2"
        android:textColor="#a1a1a1"
        android:textSize="16sp" >
    </EditText>

</LinearLayout>